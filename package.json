{
  "name": "zenthor-assist",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "ai": "^6.0.86",
      "@clerk/types": "^4.101.13",
      "@types/node": "^25.2.1",
      "convex": "^1.31.2",
      "dotenv": "^17.2.4",
      "typescript": "^5.9.3",
      "zod": "^4.1.13"
    }
  },
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt --write",
    "format:check": "oxfmt --check",
    "check": "oxlint && oxfmt --check",
    "check:fix": "oxlint --fix && oxfmt --write",
    "typecheck": "turbo run typecheck",
    "knip": "turbo run knip --continue",
    "knip:fix": "turbo run knip:fix --continue",
    "static-analysis": "turbo run lint format:check typecheck knip --continue",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "clean:workspaces": "turbo run clean",
    "release": "bun run scripts/release-workspace.ts",
    "release:check": "bun run scripts/release-workspace.ts --workspace agent --bump patch --dry-run",
    "release:agent:patch": "bun run scripts/release-workspace.ts --workspace agent --bump patch",
    "release:agent:minor": "bun run scripts/release-workspace.ts --workspace agent --bump minor",
    "release:agent:major": "bun run scripts/release-workspace.ts --workspace agent --bump major",
    "release:backend:patch": "bun run scripts/release-workspace.ts --workspace backend --bump patch",
    "release:backend:minor": "bun run scripts/release-workspace.ts --workspace backend --bump minor",
    "release:backend:major": "bun run scripts/release-workspace.ts --workspace backend --bump major",
    "release:web:patch": "bun run scripts/release-workspace.ts --workspace web --bump patch",
    "release:web:minor": "bun run scripts/release-workspace.ts --workspace web --bump minor",
    "release:web:major": "bun run scripts/release-workspace.ts --workspace web --bump major"
  },
  "dependencies": {
    "@zenthor-assist/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/node": "catalog:",
    "@zenthor-assist/config": "workspace:*",
    "knip": "^5.83.1",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "turbo": "^2.8.3",
    "typescript": "catalog:",
    "vitest": "^4.0.18"
  },
  "packageManager": "bun@1.3.8"
}
