{
  "name": "zenthor-assist",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@clerk/types": "^4.101.13",
      "@types/node": "^25.0.10",
      "convex": "^1.31.2",
      "dotenv": "^17.2.2",
      "typescript": "^5.9.3",
      "zod": "^4.1.13"
    }
  },
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt --write",
    "format:check": "oxfmt --check",
    "check": "oxlint && oxfmt --check",
    "check:fix": "oxlint --fix && oxfmt --write",
    "typecheck": "turbo run typecheck",
    "knip": "turbo run knip --continue",
    "knip:fix": "turbo run knip:fix --continue",
    "static-analysis": "turbo run lint format:check typecheck knip --continue",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "clean:workspaces": "turbo run clean"
  },
  "dependencies": {
    "@zenthor-assist/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "@types/node": "^25.1.0",
    "@zenthor-assist/config": "workspace:*",
    "knip": "^5.82.1",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "turbo": "^2.8.0",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.8"
}
