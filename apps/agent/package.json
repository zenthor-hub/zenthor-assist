{
  "name": "@zenthor-assist/agent",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "dev:core": "bun --watch src/index.core.ts",
    "dev:whatsapp": "AGENT_ROLE=whatsapp bun --watch src/index.ts",
    "dev:whatsapp-ingress": "bun --watch src/index.whatsapp-ingress.ts",
    "dev:whatsapp-egress": "bun --watch src/index.whatsapp-egress.ts",
    "dev:whatsapp-cloud": "bun --watch src/index.whatsapp-cloud.ts",
    "dev:telegram": "AGENT_ROLE=telegram bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "start:core": "bun src/index.core.ts",
    "start:whatsapp": "AGENT_ROLE=whatsapp bun src/index.ts",
    "start:whatsapp-ingress": "bun src/index.whatsapp-ingress.ts",
    "start:whatsapp-egress": "bun src/index.whatsapp-egress.ts",
    "start:whatsapp-cloud": "bun src/index.whatsapp-cloud.ts",
    "start:telegram": "AGENT_ROLE=telegram bun src/index.ts",
    "ops:check-alerts": "bun src/ops/railway-alert-check.ts",
    "auth:subscription": "bun src/subscription-auth.ts",
    "lint": "oxlint",
    "format": "oxfmt --write",
    "format:check": "oxfmt --check",
    "typecheck": "bunx tsc --noEmit",
    "knip": "knip",
    "knip:fix": "knip --fix --allow-remove-files",
    "clean": "git clean -xdf .cache .turbo node_modules convex/_generated"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.38",
    "@ai-sdk/gateway": "^3.0.29",
    "@ai-sdk/google": "^3.0.22",
    "@ai-sdk/openai": "^3.0.26",
    "@ai-sdk/xai": "^3.0.48",
    "@axiomhq/pino": "^1.4.0",
    "@sentry/bun": "^10.38.0",
    "@vercel/blob": "^2.2.0",
    "@zenthor-assist/backend": "workspace:*",
    "@zenthor-assist/observability": "workspace:*",
    "ai": "catalog:",
    "baileys": "^6.7.16",
    "convex": "catalog:",
    "html-to-text": "^9.0.5",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "qrcode-terminal": "^0.12.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/html-to-text": "^9.0.4",
    "@types/node": "catalog:",
    "@zenthor-assist/config": "workspace:*",
    "typescript": "catalog:"
  },
  "knip": {
    "ignore": [
      "src/**/*.test.ts"
    ],
    "ignoreExportsUsedInFile": true,
    "ignoreBinaries": [
      "oxlint",
      "oxfmt",
      "knip"
    ],
    "ignoreDependencies": [
      "@axiomhq/pino",
      "pino-pretty",
      "@zenthor-assist/observability"
    ]
  }
}
